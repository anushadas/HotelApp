<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="0dp"
    android:gravity="top">

    <FrameLayout
        android:id="@+id/fragment_containerService"
        android:name="com.example.android.fragmentexample.SimpleFragment"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/activity_confirmation_fragment">

    </FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:srcCompat="@drawable/homeicon" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="right"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="332dp">

            <ImageView
                android:id="@+id/imageViewService"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/breakfast3" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Breakfast"
                android:textAlignment="center"
                android:textColor="#803333"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/description_text1Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:maxLines="2"
                android:padding="5dp"
                android:text="@string/app_content1Service"
                android:textColor="#000000"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="163dp" />

            <ImageButton
                android:id="@+id/imgBtnMoreService"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@+id/description_text2Service"
                android:layout_margin="5dp"
                android:background="@drawable/plus"
                android:clickable="true" />


            <ImageButton
                android:id="@+id/imgBtnLessService"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/description_text2Service"
                android:layout_margin="5dp"
                android:background="@drawable/minus"
                android:clickable="true"
                android:visibility="gone" />

            <Button
                android:id="@+id/button1Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="right"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="332dp">

                <ImageView
                    android:id="@+id/imageView2Service"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/lunch" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:text="Lunch and Dinner"
                    android:textAlignment="center"
                    android:textColor="#803333"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/description_text2Service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:maxLines="2"
                    android:padding="15dp"
                    android:text="@string/app_content2Service"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="163dp" />

                <ImageButton
                    android:id="@+id/imgBtnMore1Service"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/description_text2Service"
                    android:layout_margin="5dp"
                    android:background="@drawable/plus"
                    android:clickable="true" />


                <ImageButton
                    android:id="@+id/imgBtnLess1Service"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/description_text2Service"
                    android:layout_margin="5dp"
                    android:background="@drawable/minus"
                    android:clickable="true"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button2Service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:gravity="right"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="332dp">

                <ImageView
                    android:id="@+id/imageView3Service"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/dessert" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="cursive"
                    android:text="Dessert"
                    android:textAlignment="center"
                    android:textColor="#803333"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/description_text3Service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:maxLines="2"
                    android:padding="15dp"
                    android:text="@string/app_content3Service"
                    android:textColor="#000000"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="163dp" />

                <ImageButton
                    android:id="@+id/imgBtnMore3Service"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/description_text2Service"
                    android:layout_margin="5dp"
                    android:background="@drawable/plus"
                    android:clickable="true" />


                <ImageButton
                    android:id="@+id/imgBtnLess3Service"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/description_text2Service"
                    android:layout_margin="5dp"
                    android:background="@drawable/minus"
                    android:clickable="true"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/button3Service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>